<ol class="breadcrumb">
    
    <li><a href="/folders">Главная</a></li>
    <% @breadcrumbs.each do |breadcrumb| %>
    	<% if @breadcrumbs.last == breadcrumb %>
    		<li class="active"><%= breadcrumb.name %></li>
    	<% else %>
        <li><a href="<%= breadcrumb.url %>"><%= breadcrumb.name %></a></li>
    	<% end %>
    <% end %>
</ol>